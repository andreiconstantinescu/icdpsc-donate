.credits
  color rgba(255, 255, 255, 0.15)
  position fixed
  bottom 7%
  padding 1em
  background rgba(0,0,0,0.05)
  transition all 1s
  &:hover
    background rgba(0,0,0,0.4)
    color #EEEEEE

.header
  height 100vh
  width 100%
  position: relative
  top: 0
  height: 100%
  width: 100%
  .chevron
    position: absolute
    color rgba(255, 255, 255, 0.15)
    left: 50%
    transform: translateX(-50%)
    bottom: 5%
    .hi-icon-wrap
      padding: 0
      .hi-icon
        margin: 0
        font-size: 15px
        width: 45px
        height: 45px
        z-index: 0
        &:hover
          box-shadow: 0 0 0 5px rgba(255,255,255,1)
          color #EEEEEE
        i
          position: absolute
          top: 50%
          left: 50%
          transform: translate3d(-50%, -50%, 0);
    @media(max-width: 767px)
      .chevron
        bottom: 0
  @media(max-width: 767px)
    padding-top: 50px
.logo
  height 8em
  position relative
  img
    left 50%
    height 100%
    position absolute
    top 50%
    transform translate3d(-50%, -50%, 0)
section
  margin-top 4em
  padding 1em 0
  background: rgba(0,0,0,0.7)
  &#donate
    background-color: #081D32
    padding 4em
    a
      margin: 0.3em
.carousel .carousel-control i
  top: 50%
  position: absolute
  transform: translate3d(-50%, -50%, 0)
